@using KhumaloCraft.Application.Portal.Models.Profile.Password
@model ChangePasswordModel

@{
    ViewData["Title"] = "Change Password";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Form.css" asp-append-version="true" />
}

<div class="container">
    <div class="tile-form-container">
        <div class="change-password-form tile-form">
            <h2><i class="fas fa-lock"></i> Change Password</h2>

            @if (ViewBag.Message != null)
            {
                <div class="alert alert-success">
                    @ViewBag.Message
                </div>
            }

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <form method="post" asp-controller="Profile" asp-action="ChangePassword">
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-lock"></i></span>
                        <input type="password" asp-for="CurrentPassword" class="form-control" id="currentPassword" placeholder="Current Password" />
                        <button type="button" class="password-toggle-btn" onclick="togglePasswordVisibility('currentPassword', 'currentPasswordIcon')">
                            <i id="currentPasswordIcon" class="fa fa-eye"></i>
                        </button>
                    </div>
                    <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-key"></i></span>
                        <input type="password" asp-for="NewPassword" class="form-control" id="newPassword" placeholder="New Password" />
                        <button type="button" class="password-toggle-btn" onclick="togglePasswordVisibility('newPassword', 'newPasswordIcon')">
                            <i id="newPasswordIcon" class="fa fa-eye"></i>
                        </button>
                    </div>
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-check"></i></span>
                        <input type="password" asp-for="ConfirmNewPassword" class="form-control" id="confirmNewPassword" placeholder="Confirm New Password" />
                        <button type="button" class="password-toggle-btn" onclick="togglePasswordVisibility('confirmNewPassword', 'confirmNewPasswordIcon')">
                            <i id="confirmNewPasswordIcon" class="fa fa-eye"></i>
                        </button>
                    </div>
                    <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-lock"></i> Change Password
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/passwordToggle.js" asp-append-version="true"></script>
}