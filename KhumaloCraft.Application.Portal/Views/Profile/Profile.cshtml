@using KhumaloCraft.Application.Portal.Models.Profile
@model ProfileModel

@{
    ViewData["Title"] = "Profile";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Form.css" asp-append-version="true" />
}

<div class="container">
    <div class="tile-form-container">
        <div class="profile-form tile-form">
            <h2><i class="fas fa-user"></i> Profile</h2>

            @if (ViewBag.Message != null)
            {
                <div class="alert alert-success">
                    @ViewBag.Message
                </div>
            }

            <form method="post" asp-controller="Profile" asp-action="UpdateProfile">
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                        <input type="email" asp-for="Username" class="form-control" readonly placeholder="Email Address" />
                    </div>
                </div>

                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                        <input type="text" asp-for="FirstName" class="form-control" placeholder="First Name" />
                    </div>
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                        <input type="text" asp-for="LastName" class="form-control" placeholder="Last Name" />
                    </div>
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-phone"></i></span>
                        <input type="text" asp-for="MobileNumber" class="form-control" placeholder="Mobile Number" />
                    </div>
                    <span asp-validation-for="MobileNumber" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-user-edit"></i> Update Details
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>