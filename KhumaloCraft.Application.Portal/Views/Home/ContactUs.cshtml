@using KhumaloCraft.Application.Portal.Models.Home
@model ContactUsModel

@{
    ViewData["Title"] = "Contact Us";
}

@section Styles {
    <link rel="stylesheet" href="~/css/ContactUs.css" asp-append-version="true" />
}

<div class="container">
    <header class="text-center">
        <h1>@ViewData["Title"]</h1>
    </header>

    <div class="my-3">
        <h2>Get in Touch</h2>
        <p>Have questions or need assistance? Reach out to us using the form below, and we’ll get back to you as soon as possible.</p>

        <div class="row">
            <div class="col-md-6">

                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-success">
                        @ViewBag.Message
                    </div>
                }

                <div class="contact-us-form">
                    <form method="post" asp-controller="Home" asp-action="SubmitMessage">
                        <div class="form-group">
                            <label for="name">Name <span class="required-asterisk">*</span></label>
                            <input type="text" id="name" name="name" class="form-control" required value="@Model.Name" />
                            @if (ViewData.ModelState["name"]?.Errors.Count > 0)
                            {
                                <div class="error-message">@ViewData.ModelState["name"].Errors[0].ErrorMessage</div>
                            }
                        </div>
                        <div class="form-group">
                            <label for="email">Email <span class="required-asterisk">*</span></label>
                            <input type="email" id="email" name="email" class="form-control" required value="@Model.Email" />
                            @if (ViewData.ModelState["email"]?.Errors.Count > 0)
                            {
                                <div class="error-message">@ViewData.ModelState["email"].Errors[0].ErrorMessage</div>
                            }
                        </div>
                        <div class="form-group">
                            <label for="message">Message <span class="required-asterisk">*</span></label>
                            <textarea id="message" name="message" class="form-control message" rows="5" maxlength="250" required>@Model.Message</textarea>
                            @if (ViewData.ModelState["message"]?.Errors.Count > 0)
                            {
                                <div class="error-message">@ViewData.ModelState["message"].Errors[0].ErrorMessage</div>
                            }
                        </div>
                        <button type="submit" class="btn btn-primary">Send Message</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="my-3">
        <h2>Other Ways to Reach Us</h2>
        <p>You can also follow us on our social media platforms or visit our office for any inquiries.</p>
        <div class="social-icons">
            <a href="#">
                <img src="~/images/social/instagram.svg" alt="Instagram" class="social-icon">
            </a>
            <a href="#">
                <img src="~/images/social/facebook.svg" alt="Facebook" class="social-icon">
            </a>
            <a href="#">
                <img src="~/images/social/x-black.svg" alt="X" class="social-icon">
            </a>
            <a href="#">
                <img src="~/images/social/youtube.svg" alt="YouTube" class="social-icon">
            </a>
        </div>
    </div>
</div>