@using KhumaloCraft.Application.Portal.Models.Craftworks
@model ViewCraftworkModel

@{
    ViewData["Title"] = "View Craftwork";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Form.css" asp-append-version="true" />
}

<div class="container">
    <div class="tile-form-container">
        <div class="view-craftwork-form tile-form">
            <h2><i class="fas fa-paint-brush"></i> @Model.Title</h2>

            <div class="form-group">
                <label for="CreatedDate">Created Date</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-calendar"></i></span>
                    <input type="text" value="@Model.CreatedDate" class="form-control" readonly />
                </div>
            </div>

            <div class="form-group">
                <label for="UpdatedDate">Updated Date</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
                    <input type="text" value="@Model.UpdatedDate" class="form-control" readonly />
                </div>
            </div>

            <div class="form-group">
                <label for="Category">Category</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-tags"></i></span>
                    <input type="text" value="@Model.Category" class="form-control" readonly />
                </div>
            </div>

            <div class="form-group">
                <label for="Title">Title</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-heading"></i></span>
                    <input type="text" value="@Model.Title" class="form-control" readonly />
                </div>
            </div>

            <div class="form-group">
                <label for="Description">Description</label>
                <div class="input-group">
                    <textarea class="form-control" rows="5" readonly>@Model.Description</textarea>
                </div>
            </div>

            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-tag"></i></span>
                    <input type="text" value="@Model.Price" class="form-control" readonly />
                </div>
            </div>

            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-hashtag"></i></span>
                    <input type="number" value="@Model.Quantity" class="form-control" readonly />
                </div>
            </div>

            <div class="form-group">
                <label for="IsActive">Is Active</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas @(Model.IsActive ? "fa-check-circle" : "fa-circle-xmark")"></i></span>
                    <input type="text" value="@(Model.IsActive ? "Yes" : "No")" class="form-control" readonly />
                </div>
            </div>

            <div class="form-group">
                <label for="ImageUrl">Image</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-image"></i></span>
                    <input type="text" value="@Model.ImageUrl" class="form-control" readonly />
                </div>
                <div class="mt-2">
                    <img src="@Model.ImageUrl" alt="Craftwork Image" style="max-width: 200px; border-radius: 5px;" />
                </div>
            </div>

            <div class="form-group">
                <a asp-controller="Craftwork" asp-action="Craftworks" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back To Craftworks
                </a>
            </div>
        </div>
    </div>
</div>