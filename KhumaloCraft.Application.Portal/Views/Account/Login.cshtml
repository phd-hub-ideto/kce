@using KhumaloCraft.Application.Portal.Models.Account.Login
@model LoginModel

@{
    ViewData["Title"] = "Login";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Form.css" asp-append-version="true" />
}

<div class="container">
    <div class="tile-form-container">
        <div class="login-form tile-form">
            <h2><i class="fas fa-sign-in-alt"></i> Login</h2>

            @if (ViewBag.Message != null)
            {
                <div class="alert alert-danger">
                    @ViewBag.Message
                </div>
            }

            <form method="post" asp-controller="Account" asp-action="LoginUser">
                <input type="hidden" asp-for="ReturnUrl" />

                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                        <input type="email" asp-for="Username" class="form-control" placeholder="Email Address" />
                    </div>
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-lock"></i></span>
                        <input type="password" asp-for="Password" class="form-control" id="passwordInput" placeholder="Password" />
                        <button type="button" class="password-toggle-btn" onclick="togglePasswordVisibility('passwordInput', 'passwordIcon')">
                            <i id="passwordIcon" class="fa fa-eye"></i>
                        </button>
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-sign-in-alt"></i> Login
                    </button>
                </div>

                <div class="form-group">
                    Don't have an account? <a asp-controller="Account" asp-action="Register"><i class="fas fa-user-plus"></i> Register here</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/passwordToggle.js" asp-append-version="true"></script>
}