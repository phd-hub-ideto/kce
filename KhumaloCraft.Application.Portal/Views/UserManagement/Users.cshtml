@using KhumaloCraft.Application.Portal.Models.Users.UserManagement
@model List<UserModel>

@{
    ViewData["Title"] = "Users";
}

<div class="container">
    <h2><i class="fas fa-users"></i> Users</h2>

    <div class="mb-3 mt-3">
        <a asp-controller="UserManagement" asp-action="CreateUser" class="btn btn-primary btn-sm">
            <i class="fas fa-user-plus"></i> Add User
        </a>
    </div>

    <div style="overflow-x: auto">
        <table class="table table-hover table-bordered table-striped">
            <thead class="table-light">
                <tr>
                    <th>User Id</th>
                    <th>Created</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Mobile Number</th>
                    <th>Last Login</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr onclick="location.href='@user.ViewUrl'" style="cursor:pointer;">
                        <td>@user.UserId</td>
                        <td>@user.CreatedDate</td>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.Username</td>
                        <td>@user.MobileNumber</td>
                        <td>@user.LastLogin</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>