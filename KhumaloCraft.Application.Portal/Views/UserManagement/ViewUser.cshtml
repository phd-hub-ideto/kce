@using KhumaloCraft.Application.Portal.Models.Users.UserManagement
@model ViewUserModel

@{
    ViewData["Title"] = "View User";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Form.css" asp-append-version="true" />
}

<div class="container">
    <div class="tile-form-container">
        <div class="view-user-form tile-form">
            <h2><i class="fas fa-user"></i> @Model.FullName</h2>

            <form novalidate>
                <div class="form-group">
                    <label>Created Date</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
                        <input type="text" value="@Model.CreatedDate" class="form-control" readonly />
                    </div>
                </div>

                <div class="form-group">
                    <label>Last Login</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-clock"></i></span>
                        <input type="text" value="@Model.LastLogin" class="form-control" readonly />
                    </div>
                </div>

                <div class="form-group">
                    <label>Full Name</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                        <input type="text" value="@Model.FullName" class="form-control" readonly />
                    </div>
                </div>

                <div class="form-group">
                    <label>Email Address</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                        <input type="email" value="@Model.Username" class="form-control" readonly />
                    </div>
                </div>

                <div class="form-group">
                    <label>Mobile Number</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-phone"></i></span>
                        <input type="text" value="@Model.MobileNumber" class="form-control" readonly />
                    </div>
                </div>

                <div class="form-group">
                    <a asp-controller="UserManagement" asp-action="Users" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back To Users
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>